{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "max-len": "off",
    "arrow-parens": ["error", "as-needed"],
    "func-names": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "radix": "off",
    "linebreak-style": "off",
    "no-console": "off"
  }
}
